<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:focusable="true"
    android:focusableInTouchMode="true">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:background="@color/colorPrimary"
        app:title="请输入BIN值"></android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="250dp"
        android:layout_height="50dp">
        <TextView
            android:text="物料编号:"
            style="@style/SCSLTextViewStyle" />
        <EditText
            style="@style/BordEditTextStyle"
            android:id="@+id/tv_wldm_dialog_add_usrValue"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <TextView
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="1px" />
    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="250dp"
        android:layout_height="50dp">
        <TextView
            android:text="品名规格:"
            style="@style/SCSLTextViewStyle" />
        <EditText
            style="@style/BordEditTextStyle"
            android:id="@+id/tv_pmgg_dialog_add_usrValue"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <TextView
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="1px" />
    <android.support.design.widget.TextInputLayout
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:theme="@style/AppTheme"
        android:id="@+id/ip_layout"
        app:errorTextAppearance="@style/TextAppearance.Design.Error">
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/bin_ed"
            android:hint="请输入BIN"/>
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <ruiduoyi.com.skyworthpda.widget.PowerButton
            android:layout_width="10dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:textColor="@android:color/white"
            android:background="@color/green"
            android:text="确定"
            android:id="@+id/sure_btn"
            android:theme="@style/AppTheme"/>

    </LinearLayout>
</LinearLayout>