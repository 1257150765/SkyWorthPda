<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:titleTextColor="@color/white"
        android:background="@color/colorPrimary"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp">
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:background="@drawable/border_shape"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:gravity="right|center_vertical"
                android:text="生产线别"
                android:layout_width="60dp"
                android:layout_height="match_parent" />
            <TextView
                android:background="@color/gray"
                android:layout_width="1px"
                android:layout_height="match_parent" />
            <Spinner
                android:id="@+id/sp_xb_pgxjactivity"
                android:layout_width="150dp"
                android:layout_height="50dp"/>

        </LinearLayout>
        <TextView
            android:background="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="1px" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:text="校验站位"
                android:gravity="right|center_vertical"
                android:layout_width="60dp"
                android:layout_height="match_parent" />
            <TextView
                android:background="@color/gray"
                android:layout_width="1px"
                android:layout_height="match_parent" />
            <EditText
                android:editable="false"
                style="@style/BordEditTextStyle"
                android:id="@+id/et_jyzw_pgxjactivity"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <TextView
            android:background="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="1px" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:text="站位程序"
                android:gravity="right|center_vertical"
                android:layout_width="60dp"
                android:layout_height="match_parent" />
            <TextView
                android:background="@color/gray"
                android:layout_width="1px"
                android:layout_height="match_parent" />
            <EditText
                style="@style/BordEditTextStyle"
                android:id="@+id/et_zwcx_pgxjactivity"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <TextView
            android:background="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="1px" />
        <TextView
            android:background="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="1px" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/tv_tv4_pgxjactivity"
                android:gravity="right|center_vertical"
                android:text="二维条码"
                android:layout_width="60dp"
                android:layout_height="match_parent" />
            <TextView
                android:background="@color/gray"
                android:layout_width="1px"
                android:layout_height="match_parent" />
            <EditText
                style="@style/BordEditTextStyle"
                android:id="@+id/et_code_pgxjactivity"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <TextView
            android:background="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="1px" />
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_btncontainer_pgxjactivity"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <Button
                android:id="@+id/btn_bbqh_pgxjactivity"
                android:gravity="center"
                android:text="版本切换"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <Button
                android:id="@+id/btn_dgxl_pgxjactivity"
                android:gravity="center"
                android:text="单个下料"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <Button
                android:id="@+id/btn_qbxl_pgxjactivity"
                android:gravity="center"
                android:text="全部下料"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>
    <HorizontalScrollView
        android:id="@+id/hsv_recycler_container_pgxjactivity"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:background="@color/colorPrimary"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:gravity="center"
                    android:text="站位"
                    android:layout_width="50dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:background="@color/gray"
                    android:layout_width="1px"
                    android:layout_height="match_parent" />
                <TextView
                    android:gravity="center"
                    android:text="物料"
                    android:layout_width="150dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:background="@color/gray"
                    android:layout_width="1px"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="替代料" />
                <TextView
                    android:background="@color/gray"
                    android:layout_width="1px"
                    android:layout_height="match_parent" />
                <TextView
                    android:gravity="center"
                    android:text="核对"
                    android:layout_width="50dp"
                    android:layout_height="match_parent" />

            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_recycler_pgxjactivity"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>