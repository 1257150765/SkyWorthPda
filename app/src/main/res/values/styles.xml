<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--主题颜色1-->
    <style name="AppTheme1" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#607d8b</item>
        <item name="colorPrimaryDark">#37474f</item>
        <item name="colorAccent">#78909c</item>

    </style>
    <!--主题颜色2-->
    <style name="AppTheme2" parent="Theme.Design.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#03a9f4</item>
        <item name="colorPrimaryDark">#0277bd</item>
        <item name="colorAccent">#29b6f6</item>

    </style>
    <!--主题颜色3-->
    <style name="AppTheme3" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#259b24</item>
        <item name="colorPrimaryDark">#0d5302</item>
        <item name="colorAccent">#2baf2b</item>

    </style>
    <!--主题颜色4-->
    <style name="AppTheme4" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#ff9800</item>
        <item name="colorPrimaryDark">#e65100</item>
        <item name="colorAccent">#ffa726</item>

    </style>

    <style name="MainActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--透明状态栏-->
        <item name="android:windowTranslucentStatus">true</item>
        <!--透明导航栏-->
        <!--<item name="android:windowTranslucentNavigation">true</item>
        &lt;!&ndash;使状态栏，导航栏可绘制&ndash;&gt;-->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="BordEditTextStyle">
        <item name="android:padding">0dp</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="transBg">
        <!--dialog的背景颜色-->
        <item name="android:windowBackground">@color/touming</item>
        <item name="android:layout_gravity">center</item>

        <!--去除dialog后面的阴影-->
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <style name="TextViewStyle">
        <item name="android:layout_width">75dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">right|center_vertical</item>
    </style>
    <!--首次上料textview style-->
    <style name="SCSLTextViewStyle">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">right|center_vertical</item>
    </style>
    <style name="DialogActivity" parent="Base.ThemeOverlay.AppCompat.Dialog">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>//对话框无标题
        <item name="android:windowIsTranslucent">true</item>//此对话框的背景
        <item name="android:windowBackground">@color/white</item>//对话框是否透明
        <item name="android:windowContentOverlay">@null</item>//对话框是否有遮盖
        <item name="android:windowIsFloating">true</item> //对话框是否浮动
        <item name="android:backgroundDimEnabled">true</item>//是否允许对话框的背景变暗
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

</resources>
